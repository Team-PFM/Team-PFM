<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/adddeletepageAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="AddDB"
        android:text="@string/adddeletepageAdd" android:textSize="25dp" android:layout_gravity="center" android:layout_margin="15dp" android:textStyle="bold"/>

    <Button
        android:id="@+id/adddeletepageDelete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="DeleteDB"
        android:text="@string/adddeletepageDelete" android:textSize="25dp" android:textStyle="bold" android:layout_margin="15dp" android:layout_gravity="center"/>

</LinearLayout>