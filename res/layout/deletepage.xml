<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <TextView
                android:id="@+id/deleetpageText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletepageText"
                android:textSize="16dp"
                android:textStyle="bold" android:layout_marginTop="20dp"/>
    
    
    <Spinner
        android:id="@+id/deletepageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:text="@string/delete" android:layout_marginTop="20dp"/>
 </LinearLayout>